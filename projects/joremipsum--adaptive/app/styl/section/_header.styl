.header
  border-top solid 5px primaryColor
  clearfix()

.logo
  color secondaryColor1
  &__site-name
    display inline-block
    font fontHeavy (19/fontSize)rem/1 fontArray
    padding 11px 0 0 0
  &__site-caption
    font fontLight (15/fontSize)rem/1 fontArray

.icon-logo
  display inline-block
  float left
  margin 12px 5px 12px 13px

.menu
  float left
  &__list
    list-style none
    margin 0 0 0 -29px
    li
      float left
    a
      color secondaryColor1
      display inline-block
      font fontNormal (13/fontSize)rem/1 fontArray
      padding 17px 10px 16px
      text-decoration none
      text-transform uppercase
    a:hover
      background primaryColor
      color secondaryColor2

@media screen and (min-width: 768px)
  .logo
    float left
    text-align left
    width 200px
    &__site-name
      padding 23px 0 0 0

  .icon-logo
    margin 24px 10px 24px 25px

  .menu
    float right
    &__list
      margin 0
      a
        display inline-block
        padding 34px 20px 33px
